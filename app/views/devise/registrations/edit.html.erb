<title> VirtualFitnessRoom | Inscription</title>
<br> 
<div class=" w-100  justify-content-center align-itmes-center mb-3 mt-5" >
  <h2><%= t(".title", resource: resource.model_name.human) %></h2>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>
    
  <div class="row container-fluid" style = "padding-top: 1rem; border: 1px solid;">
    <div class="col-md-6 form-inputs">
      <div class="w-100 pb-4 d-flex flex-column container justify-content-center align-itmes-center mb-3" style = "padding-top: 1rem;">
        <h3 class="text-center">Informations G√©n√©rales</h3>
        <%= f.input :firstname,
                  prepend: "",
                  placeholder: "Pr√©noms",
                  autofocus: true,
                  required: true,
                  input_html: { autocomplete: "firstname" }%>
                  <br>
        <%= f.input :lastname,
                  prepend: "",
                  required: true,
                  placeholder: "Nom de famille",
                  input_html: { autocomplete: "lastname" }%> 
                  <br>
      
        <%= f.input :address,
                  prepend: "‚òé",
                  placeholder: 'Re-entrer le mot de passe ci-dessus',
                  required: true,
                  input_html: { autocomplete: "address" } %>
                  <br>
        <%= f.input :contact,
                  prepend: "üìû",
                  placeholder: 'Re-entrer le mot de passe ci-dessus',
                  required: true,
                  input_html: { autocomplete: "contact" } %>
                  <br>
        <%= f.input :avatar, as: :file, wrapper: :horizontal_file  %> <br>
        
      </div>
    </div>

    <div class="col-md-6 form-inputs">
      <div class="w-100 d-flex flex-column container justify-content-center align-itmes-center mb-3" style = "padding-top: 1rem;">
        <h3 class="text-center">Donn√©es de connexion</h3>
        <%= f.input :gender, prepend: "‚ùì", required: true, :collection => ["Masculin", "F√©minin"],:input_html => { :class => 'form-control'}, prompt: "Choose From List" %> <br />
         <%= f.input :profession,
                  prepend: "üì±",
                  placeholder: 'Re-entrer le mot de passe ci-dessus',
                  required: true,
                  input_html: { autocomplete: "profession" } %>
                  <br>
        <%= f.input :birthday, input_html: {class: 'form-datepicker'}  %> <br>
        <%= f.input :height, append: "cm", input_html: { min: 0.0 }  %> <br>
        <%= f.input :weight, append: "Kg", input_html: { min: 0 }  %> <br>
      </div>
    </div>
  </div>

  <div class="row container-fluid mt-3" style = "padding-top: 1rem; border: 1px solid;">
    <div class="form-inputs">
      <div class="w-100 d-flex flex-column container justify-content-center align-itmes-center mb-2" >
        <h3 class="text-center">Donn√©es de connexion</h3>
        <%= f.input :username,
                      prepend: "@",
                      required: true,
                      placeholder: "Surnom ou nom d'utilisateur",
                      input_html: { autocomplete: "username" }%> <br>
        <%= f.input :email,
                      prepend: "‚úâ",
                      placeholder: 'Un mail valide',
                      required: true,
                      input_html: { autocomplete: "email" }%> <br>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p><%= t(".currently_waiting_confirmation_for_email", email: resource.unconfirmed_email) %></p>
        <% end %>

        <%= f.input :password,
                    hint: t(".leave_blank_if_you_don_t_want_to_change_it"),
                    required: false,
                    input_html: { autocomplete: "new-password" } %> <br />
        <%= f.input :password_confirmation,
                    required: false,
                    input_html: { autocomplete: "new-password" } %> <br />
        <%= f.input :current_password,
                    hint: t(".we_need_your_current_password_to_confirm_your_changes"),
                    required: true,
                    input_html: { autocomplete: "current-password" } %>

        <div class="form-actions">
          <%= f.button :submit, t(".update"), class:"btn btn-warning mt-2 mb-4 w-100" %>
        </div>
        <% end %>
        <h3><%= t(".cancel_my_account") %></h3>
        <p><%= t(".unhappy") %> <%= link_to t(".cancel_my_account"), registration_path(resource_name), data: { confirm: t(".are_you_sure") }, method: :delete, class:"btn btn-outline-danger w-75 ms-4" %></p>

        <%= link_to t("devise.shared.links.back"), :back, class:"btn btn-outline-success mb-2" %>
      </div>
    </div>
  </div>
</div>