<div class="mt-5"></div>  <br>
<div class="w-50 d-flex flex-column container justify-content-center align-itmes-center" style = "padding-top: 1rem; border: 1px solid;">
  <h2><%= t("devise.invitations.new.header") %></h2>

  <%= simple_form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <% resource.class.invite_key_fields.each do |field| -%>
      <div class="form-inputs">
        <%= f.input :email %> <br />
        <%= f.input :admin %>
      </div>
    <% end -%>

    <div class="form-actions mt-2">
      <%= f.button :submit, t("devise.invitations.new.submit_button"), class:"btn btn-success mt-2 w-100 mb-3" %>
    </div>
  <% end %>
</div>
