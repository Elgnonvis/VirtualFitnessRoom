<header class="p-2 bg-primary text-white fixed-top ">
    <div class="container-fluid row d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
     
        <div class="col-3">
            <a href="/" class="navbar-brand mb-2 mb-lg-0 text-white"><span class="fb"><%= t("button.brand") %></span></a>
        </div>
        
        <div class=" col-9">
            <% if user_signed_in? %> 
              <div class="row">
                <div class="col-7 ">
                  <div class="form-group d-flex justify-content-center mb-2 mb-lg-0 ">
                    <% if current_user.admin %>
                    <% else %>
                    <% end %>
                    
                  </div>  
                </div>
                <div class=" col-5  text-end text-decoration-none">
                  <%= link_to "Profile", profil_path, class:"btn btn-success me-2" %>
                  <%= link_to t("button.log_out"), destroy_user_session_path, method: :delete, class:"btn btn-danger" %>
                </div> 
            <% else %>
              <div class="col-12 text-end text-decoration-none">
                <a class="btn btn-success me-2" href="<%= new_user_session_path %>" role="button"><%= t("button.log_in") %></a>
                <a class="btn btn-warning me-2" href="<%= new_user_registration_path %>" role="button"><%= t("button.sign_up") %></a>
                
              </div> 
              </div>
            <% end %>
        </div> 
    </div>
</header>

<% if notice %>

<p class="alert alert-success"><%= notice %></p>

<% end %>

<% if alert %>

<p class="alert alert-danger"><%= alert %></p>

<% end %>

